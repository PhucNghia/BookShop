<%= form_with(model: book, local: true) do |form| %>
  <div class="row">
    <div class="col-md-6 col-md-offset-4">
      <% if book.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-danger">
           <%= t("users.form.error_messages") %>
              <%= @book.errors.count %> <%= t("users.form.error") %>.
          </div>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name, id: :book_name %>
      </div>

      <div class="field">
        <%= form.label :picture %>
        <%= form.text_field :picture, id: :book_picture %>
      </div>

      <div class="field">
        <%= form.label :price %>
        <%= form.text_field :price, id: :book_price %>
      </div>

      <div class="field">
        <%= form.label :status %>
        <%= form.check_box :status, id: :book_status %>
      </div>

      <div class="field">
        <%= form.label :category %>
        <%= form.select :category_id, Category.pluck(:name, :id) %>
      </div>

      <div class="field">
        <%= form.label :publisher %>
        <%= form.select :publisher_id, Publisher.pluck(:name, :id) %>
      </div>

      <div class="actions">
        <%= form.submit t("books.add_book"), class: "btn btn-primary" %>
        <%= link_to t("users.back"), books_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
